<%= form_with(model: country, class: "form-horizontal") do |form| %>
  <% if country.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <h4 class="alert-heading"><%= pluralize(country.errors.count, "błąd") %> uniemożliwiło zapisanie tego kraju:</h4>
      <ul>
        <% country.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :name, "Nazwa", class: "col-form-label col-sm-2" %>
    <div class="col-sm-10">
      <%= form.text_field :name, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :capital, "Stolica", class: "col-form-label col-sm-2" %>
    <div class="col-sm-10">
      <%= form.text_field :capital, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :area, "Powierzchnia", class: "col-form-label col-sm-2" %>
    <div class="col-sm-10">
      <%= form.number_field :area, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-12">
      <%= form.submit "Zapisz", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
