<div class="container">
  <p style="color: green"><%= notice %></p>

  <h1>Kraj</h1>
  <div class="row bg-primary bg-gradient bg-opacity-50">
    <div class="col"><strong>Nazwa kraju:</strong></div>
    <div class="col"><strong>Stolica:</strong></div>
    <div class="col"><strong>Powierzchnia:</strong></div>
    <div class="col"><strong>Lista miast:</strong></div>
  </div>

  <div class="row bg-info bg-gradient bg-opacity-25">
    <div class="col"><%= @country.name %></div>
    <div class="col"><%= @country.capital %></div>
    <div class="col"><%= @country.area %></div>
    <div class="col">
      <% @country.cities.each do |city| %>
        <%= city.name_city %> <br>
      <% end %>
    </div>
  </div>

  <div class="mt-3">
    <div class="d-flex justify-content-between">
      <div>
        <%= link_to "Edytuj ten kraj", edit_country_path(@country), class: "btn btn-primary mr-2" %>
        <%= link_to "Powrót do krajów", countries_path, class: "btn btn-secondary mr-2" %>
      </div>
      <div>
        <%= button_to "Usuń ten kraj", @country, method: :delete, class: "btn btn-danger" %>
      </div>
    </div>
  </div>
</div>
