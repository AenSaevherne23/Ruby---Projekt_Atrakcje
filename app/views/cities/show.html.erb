<div class="container">
  <p style="color: green"><%= notice %></p>

  <h1>Miasto</h1>
  <div class="row bg-primary bg-gradient bg-opacity-50">
    <div class="col"><strong>Nazwa miasta:</strong></div>
    <div class="col"><strong>Populacja:</strong></div>
    <div class="col"><strong>Kraj:</strong></div>
    <div class="col"><strong>Lista atrakcji:</strong></div>
    <div class="col"><strong>Lista użytkowników:</strong></div>
  </div>
  <div class="row bg-info bg-gradient bg-opacity-25">
    <div class="col"><%= @city.name_city %></div>
    <div class="col"><%= @city.population %></div>
    <div class="col"><%= @city.country.name %></div>
    <div class="col">
      <% @city.attractions.each do |attraction| %>
        <%= attraction.name_attraction %> <br>
      <% end %>
    </div>
    <div class="col">
      <% @city.users.each do |user| %>
        <%= user.name_user %><br>
      <% end %>
    </div>
  </div>
  <div class="mt-3">
    <div class="d-flex justify-content-between">
      <div>
        <%= link_to "Edytuj to miasto", edit_city_path(@city), class: "btn btn-primary mr-2" %>
        <%= link_to "Powrót do miast", cities_path, class: "btn btn-secondary mr-2" %>
      </div>
      <div>
        <%= button_to "Usuń to miasto", @city, method: :delete, class: "btn btn-danger" %>
      </div>
    </div>
  </div>
</div>
