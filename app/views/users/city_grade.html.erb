<%= turbo_frame_tag 'UC-'+@user.id.to_s+'-'+@city.id.to_s do %>
  <div class="row bg-secondary bg-gradient bg-opacity-10 border-bottom">
    <div class="col-4"><h6><%= @user.name_user %></h6></div>
    <div class="col-2"><h6>Oceny</h6></div>
    <div class="col-2"></div>
  </div>

  <%= form_with url: save_city_path do |form| %>
    <% @attractions.each do |a| %>
      <div class="row border-bottom">
        <div class="col">
          <%= @grades[a.id]['name_attraction'] %>
        </div>
        <div class="col-2">
          <%= form.number_field 'oceny['+a.id.to_s+']', value: @grades[a.id]['grade'], in: 1.0..10.0, step: 0.5 %>
        </div>
      </div>
    <% end %>
    <%= form.submit "Zapisz", class: "btn btn-sm btn-primary" %>
  <% end %>
<% end %>
