<div class="container bg-secondary bg-gradient bg-opacity-10">
  <div class="row">
    <div class="col-4"><h2><%= @user.name_user %></h2></div>
    <div class="col-2"><%= link_to "Edycja", edit_user_path(@user), class: "btn btn-sm btn-primary"%></div>
    <div class="col-2"><%= link_to "Powrót", users_path, class: "btn btn-sm btn-primary" %></div>
  </div>
  <%= turbo_frame_tag 'UC-'+@user.id.to_s+'-'+@city.id.to_s do %>
    <div class="row bg-secondary bg-gradient bg-opacity-10 border-bottom">
      <div class="col-4"><h6><%= @city.name_city %></h6></div>
      <div class="col-2"><h6>Oceny</h6></div>
      <div class="col-2"><%= link_to 'Oceń', grade_city_path(@user.id, @city.id), data:{turbo_frame: 'UC-'+@user.id.to_s+'-'+@city.id.to_s}, class: "btn btn-sm btn-primary" %> </div>
      <div class="col-2"><%= link_to 'Ukryj', nograde_city_path(@user.id, @city.id), data:{turbo_frame: 'UC-'+@user.id.to_s+'-'+@city.id.to_s}, class: "btn btn-sm btn-primary" %> </div>
    </div>
    <% @attractions.each do |a| %>
      <div class="row border-bottom">
        <div class="col">
          <%= @grades[a.id]['name_attraction'] %>
        </div>
        <div class="col-2"><%= @grades[a.id]['grade'] %> </div>
      </div>
    <% end %>
  <% end %>

</div>