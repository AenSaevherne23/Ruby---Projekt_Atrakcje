<div class="container">
  <p style="color: green"><%= notice %></p>

  <h1>Atrakcja</h1>
  <div class="row bg-primary bg-gradient bg-opacity-50">
    <div class="col"><strong>Nazwa atrakcji:</strong></div>
    <div class="col"><strong>Kategoria:</strong></div>
    <div class="col"><strong>Opis:</strong></div>
    <div class="col"><strong>Miasto:</strong></div>
  </div>
  <div class="row bg-info bg-gradient bg-opacity-25">
    <div class="col"><%= @attraction.name_attraction %></div>
    <div class="col"><%= @attraction.category %></div>
    <div class="col"><%= @attraction.description %></div>
    <div class="col"><%= @attraction.city.name_city %></div>
  </div>
  <div class="mt-3">
    <div class="d-flex justify-content-between">
      <div>
        <%= link_to "Edytuj tę atrakcję", edit_attraction_path(@attraction), class: "btn btn-primary mr-2" %>
        <%= link_to "Powrót do atrakcji", attractions_path, class: "btn btn-secondary mr-2" %>
      </div>
      <div>
        <%= button_to "Usuń tę atrakcję", @attraction, method: :delete, class: "btn btn-danger" %>
      </div>
    </div>
  </div>
</div>
